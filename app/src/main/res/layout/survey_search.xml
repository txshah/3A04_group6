<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Animal Attributes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Spinner
        android:id="@+id/spinner_legs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/legs_options"/>

    <Spinner
        android:id="@+id/spinner_coat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/coat_options"/>

    <Spinner
        android:id="@+id/spinner_colour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/colour_options"/>

    <Spinner
        android:id="@+id/spinner_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/domain_options"/>

    <Spinner
        android:id="@+id/spinner_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/region_options"/>

    <Spinner
        android:id="@+id/spinner_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:entries="@array/size_options"/>

    <Button
        android:id="@+id/submit_freeform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_default"
        android:padding="12dp"/>

</LinearLayout>
